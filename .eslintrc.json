{
    "extends": "airbnb",
    "rules": {
        "indent": ["warn", 4],
        "react/jsx-indent": ["warn", 4],
        "max-len": ["warn", 120],
        "import/prefer-default-export": "off"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["app", "./app"]
                ],
                "extensions": [".js", ".jsx"]
            }
        }
    }
}
